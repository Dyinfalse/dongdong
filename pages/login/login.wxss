/* pages/login/login.wxss */
.content {
    box-sizing: border-box;
    padding: 0px 23px;
    padding-top: 20vh;
}

.title {
    font-size: 22px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 50px;
}

input {
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    padding: 13px 0px;
    margin-top: 30px;
    font-size: 20px;
}

button {
    margin-top: 30px;
    background: rgba(25, 107, 255, 1);
    color: #fff;
}

button.button-hover {
    opacity: 0.5;
    background: rgba(25, 107, 255, 1);
}