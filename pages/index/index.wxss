/**index.wxss**/

.container {
    width: 90%;
    margin: 0 auto;
    height: 100%
}

.examples {
    font-size: 12px;
    display: flex;
    justify-content: space-between;
    padding: 14px;
    background: #fff;
    border-radius: 6px;
    box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.08);
    position: fixed;
    top: 0px;
    width: 90%;
}

.examples text::before {
    content: " ";
    display: inline-block;
    width: 12px;
    height: 12px;
    background: #fff;
    position: relative;
    right: 3px;
    top: 2px;
}

.desk-list .desk-info.ing,
.examples text.ing::before {
    background: #30BF8A;
}

.desk-list .desk-info.pause,
.examples text.pause::before {
    background: #F3BD4E;
}

.desk-list .desk-info.lt400,
.examples text.lt400::before {
    background: #FF6E35;
}

.desk-list .desk-info.free,
.examples text.free::before {
    background: #A5ADBA;
}

.desk-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding-top: 60px;
}

.desk-list .desk-info {
    width: 48%;
    background: #A5ADBA;
    border-radius: 4px;
    margin-bottom: 16px;
    font-size: 12px;
    position: relative;
    color: #fff;
    padding: 8px 12px 15px;
    line-height: 20px;
}

.desk-list .desk-info.free .end,
.desk-list .desk-info.free .pause,
.desk-list .desk-info.pause .pause,
.desk-list .desk-info.lt400 .ing,
.desk-list .desk-info.ing .ing {
    display: none;
}


.desk-list .desk-info .desk-num {
    color: #fff;
    width: 40px;
    height: 26px;
    text-align: center;
    position: absolute;
    right: 0;
    top: 0;
    border-radius: 0px 4px 0px 97px;
    background: rgba(255, 255, 255, 0.5);
    padding-left: 5px;
    line-height: 24px;
}

.desk-list .desk-info .vip-name {
    font-size: 15px;
    line-height: 30px;
}

.desk-list .desk-info .btn-box {
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
}

.desk-list .desk-info .btn-box button {
    width: 42%;
    font-size: 12px;
    height: 21px;
    line-height: 21px;
}